# Script for cleaning

%include <pbs.h>
%include <head.h>

date=%DATUM%
run=%LAUF%
amem=%ANZMEMB%
assimc=%ASSIMC%
user=%USER%

###################Run setup script for environment######################
. /home/ms/at/${user}/SCR/setup_cy43.ksh $run $date 999 999 $assimc $user
#########################################################################

# report to ecflow
ecflow_client --label=run "The date is now ${date} ${run}"

ecflow_client --label=info "Cleaning files"
if [ -d ${MY_DIR}/DATA/${p2date}/${p2run} ] ; then

   ecflow_client --label=info "${p2date}/${p2run} exists"
   cd ${MY_DIR}/DATA/${p2date}/${p2run}
   rm -rf BATOR BATOR3D OBSERVATIONS LBCGET PREGPSSOL

   i=0
   while (( ${i} <= ${amem} - 1 )) ; do

      ii=$(printf "%%02d" $i)

      if [ -d ${MY_DIR}/DATA/${p2date}/${p2run}/MEM_${ii} ] ; then

         cd ${MY_DIR}/DATA/${p2date}/${p2run}/MEM_${ii}
         rm -rf 927SURF VARBCCOMB ADDSURF COUPL LBC PROGRID SCREENING SSTEX
      
         if [ -d ${MY_DIR}/DATA/${p2date}/${p2run}/MEM_${ii}/001 ] ; then
 
            cd ${MY_DIR}/DATA/${p2date}/${p2run}/MEM_${ii}/001
            find . -mindepth 1 ! -name "ICMSH*" | xargs rm -rf
        
         fi 

      fi

      (( i=${i}+1 ))   

   done

else

   ecflow_client --label=info "${p2date}/${p2run} does not exist"

fi


[[ -d ${MY_DIR}/DATA/${p9date}/${p9run} ]] && rm -rf ${MY_DIR}/DATA/${p9date}/${p9run}

[[ -d ${MY_DIR}/DATA/${psdate} ]] && rm -rf ${MY_DIR}/DATA/${psdate}

%include <tail.h>
